.button {
    border: none;
    color: black;
    padding: 15px 32px;
    text-align: center;
    text-decoration: none;
    display:inline-block;
    font-size: 16px;

    margin:3%;
    cursor: pointer;
}

.button:hover{

text-decoration:none;
}

.button:hover span {
  padding-right: 25px;
}

.button:hover span:after {
  opacity: 1;
  right: 0;
}
.button span:after {
  content: '\00bb';
  position: absolute;
  opacity: 0;
  top: 0;
  right: -20px;
  transition: 0.5s;
}


.button2 {background-color: yellow;} /* blue */
.button3 {background-color: #f44336;} /* red */ 
.button4 {background-color:red; color: black;} /* gray */ 
.button5 {background-color:green;} /* black */
